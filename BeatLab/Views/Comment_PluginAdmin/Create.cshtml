@model BeatLab.Models.Entities.Comment_Plugin

@{
    ViewBag.Title = "Добавление комментариев";
}
<br />
<h2>Добавление комментариев</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Комментарий</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Content_Comment, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Content_Comment, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Дата публикации</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Date_Comment, new { htmlAttributes = new { @class = "form-control", type="date" } })
            @Html.ValidationMessageFor(model => model.Date_Comment, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Плагин</label>
        <div class="col-md-10">
            @Html.DropDownList("ID_Plugin", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_Plugin, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Пользователь</label>
        <div class="col-md-10">
            @Html.DropDownList("ID_User", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_User, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

