@model IEnumerable<BeatLab.Models.Entities.Alboms>

@{
    ViewBag.Title = "Альбомы";
}

<h2>Альбомы</h2>

<p>
    @Html.ActionLink("Добавить новый", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название альбома
        </th>
        <th>
            Фото
        </th>
        <th>
            Тип альбома
        </th>
        <th>
            Никнейм создателя
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name_Album)
        </td>
        <td>
            @{
                if (item.Image_Album == null)
                {

                    <img style="width:80px; height:60px;" src="~/Resource/user.png" />
                }
                else
                {
                    @Html.Raw("<img style='width:80px; height:60px;' src=\"data:image/jpeg;base64,"
                               + Convert.ToBase64String(item.Image_Album) + "\" />")
                }
            }
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Type_Alboms.Name_Type_Alboms)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Nickname_User)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID_Album }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID_Album })
        </td>
    </tr>
}

</table>
