@using BeatLab.Models.Entities;
@model Order_Music

@{
    @Styles.Render("~/Content/StylePage/PaymentStyle.css")
    ViewBag.Title = "Create";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <div class="page-header text-center">
        <h3>Оплата товара</h3>
    </div>

    <!-- Credit Card Payment Form - START -->
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-6 col-md-offset-3">
                <div class="tips">
                    <br />
                    <p>Тип товара: ...</p>
                    <p>Название товара: Sample 128 BPM</p>
                    <p>Продавец: Izmail</p>
                    <p>Цена: 101р</p>
                </div>
                <br />
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <div class="row">

                            <div class="inlineimage">
                                <img class="img-responsive images" src="~/Resource/card.png">
                            </div>
                        </div>
                    </div>
                    @using (Html.BeginForm("Create", "Order_Music", FormMethod.Post, htmlAttributes: new { style = "height: 50px;" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group">
                                        <label>НОМЕР КАРТЫ</label>
                                        <div class="input-group"> <input type="tel" class="form-control" placeholder="Введите номер карты" /> <span class="input-group-addon"><span class="fa fa-credit-card"></span></span> </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-7 col-md-7">
                                    <div class="form-group"> <label><span class="hidden-xs">СРОК ГОДНОСТИ</span><span class="visible-xs-inline">EXP</span> DATE</label> <input type="tel" class="form-control" placeholder="MM / YY" /> </div>
                                </div>
                                <div class="col-xs-5 col-md-5 pull-right">
                                    <div class="form-group"> <label>ЗАЩИТНЫЙ КОД</label> <input type="tel" class="form-control" placeholder="CVC" /> </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="form-group"> <label>ИМЯ ВЛАДЕЛЬЦА</label> <input type="text" class="form-control" placeholder="Введите имя владельца" /> </div>
                                </div>
                            </div>
                        </div>
                        <div class=" col-xs-12 checkbox">
                            <label>
                                <input type="checkbox" id="blankCheckbox" value="option1" aria-label="">
                                <label>Согласны ли вы с условиями пользовательского соглашения?</label>
                            </label>
                        </div>
                        <div class="panel-footer shadowfoother" style="background-color:white;">
                            <div class="row">

                                <div style="height: 50px;">
                                    <div class="col-xs-12"> <button class="btn btn-success btn-lg btn-block" style="background-color: #00b4ef; border-block-color: #00b4ef; ">Оплатить</button> </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
