@using BeatLab.Models.Entities;
@model IEnumerable<Order_Music>

@{
    ViewBag.Title = "Заказы музыки";
}

<h2>Заказы музыки</h2>

<p>
    @Html.ActionLink("Создать новый", "CreateAdmin")
</p>
<table class="table">
    <tr>
        <th>
           Название музыки
        </th>
        <th>
           Никнейм
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Music.Name_music)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.User.Nickname_User)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID_Order_Music }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID_Order_Music })
        </td>
    </tr>
}

</table>
