@model BeatLab.Models.Entities.Format_Plugin

@{
    ViewBag.Title = "Изменение формата плагина";
}

<br />
<h3>Изменение формата плагина</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID_Format_Plugin)

        <div class="form-group">
            <label for="name-4c18" class="control-label col-md-2">Название формата плагина</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name_Format_Plugin, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name_Format_Plugin, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
