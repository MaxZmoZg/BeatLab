@model IEnumerable<BeatLab.Models.Entities.Format_Plugin>

@{
    ViewBag.Title = "Формат плагина";
}

<h2>Формат плагина</h2>

<p>
    @Html.ActionLink("Добавить новый", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Название формата плагина
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name_Format_Plugin)
        </td>
        <td>
            @Html.ActionLink("Редактировать", "Edit", new { id=item.ID_Format_Plugin }) |
            @Html.ActionLink("Удалить", "Delete", new { id=item.ID_Format_Plugin })
        </td>
    </tr>
}

</table>
