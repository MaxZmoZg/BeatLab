@model BeatLab.Models.Entities.Genere_Of_Music

@{
    ViewBag.Title = "Добавление жанра музыки";
}
<br />

<h3>Добавление жанра музыки</h3>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Название жанра музыки</label>
     
        <div class="col-md-10">
            @Html.EditorFor(model => model.Name_Gener_of_music, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name_Gener_of_music, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Добавить" class="btn btn-default" />
            </div>
        </div>
    </div>
}


