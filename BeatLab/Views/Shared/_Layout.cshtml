<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar header-style navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BeatLab", "Index", "Home", new { area = "" }, new { @class = "navbar-brand brand-style " })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "header-style-text  " })</li>
                    <li>@Html.ActionLink("Информация", "About", "Home", new { area = "" }, new { @class = "header-style-text  " })</li>
                    <li>@Html.ActionLink("Связаться", "Contact", "Home", new { area = "" }, new { @class = "header-style-text  " })</li>
                </ul>
                <ul name="Hidd" class="nav navbar-nav navbar-right">
                    @{

                        if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                        {

                            <li>@Html.ActionLink($"{User.Identity.Name}", "Contact", "Home", new { area = "" }, new { @class = "header-style-text glyphicon glyphicon-star-empty" })</li>
                            <li>
                                @Html.ActionLink(linkText: "Выйти",
                                                 actionName: "Logout",
                                                 controllerName: "Account",
                                                 htmlAttributes: new { @class = "header-style-text glyphicon" })
                            </li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Авторизация", "Login", "Account", new { area = "" }, new { @class = " header-style-text glyphicon glyphicon-log-in" }) </li>
                            <li>@Html.ActionLink("Регистрация", "Register", "Account", new { area = "" }, new { @class = " header-style-text glyphicon glyphicon-user" })</li>
                        }
                    }
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="dada">&copy; @DateTime.Now.Year - мое приложение ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
