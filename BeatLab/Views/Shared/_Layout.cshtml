<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - приложение ASP.NET</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/Content/AccountStyle.css" media="screen">

    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar header-style navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BeatLab", "Home.Index", @class: "navbar-brand brand-style ")
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Биты", "Home.Index", @class: "header-style-text")</li>
                    <li>@Html.ActionLink("Семплы", "Home.About", @class: "header-style-text")</li>
                    <li>@Html.ActionLink("Плагины", "Home.Contact", @class: "header-style-text")</li>
                    <li>@Html.ActionLink("Барабаны", "Home.Contact", @class: "header-style-text")</li>
                </ul>
                <ul name="Hidd" class="nav navbar-nav navbar-right">
                    @{
                        if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Личный кабинет", "Users.Details", @class: "header-style-text")</li>
                            <li>@Html.ActionLink("Выйти", "Account.Logout", @class: "header-style-text")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Авторизация", "Account.Login", @class: "header-style-text glyphicon glyphicon-log-in")</li>
                            <li>@Html.ActionLink("Регистрация", "Account.Register", @class: "header-style-text glyphicon glyphicon-user")</li>
                        }
                    }
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p class="dada">&copy; @DateTime.Now.Year - мое приложение ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
