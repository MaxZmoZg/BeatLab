@model BeatLab.User

@{
    ViewBag.Title = "Добавить нового пользователя";
}

<h2>Добавить нового пользователя</h2>


@using (Html.BeginForm("Create", "Users", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Фамилия</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Last_Name_User, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Last_Name_User, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Имя</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.First_Name_User, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.First_Name_User, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Отчество</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Middle_Name_User, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Middle_Name_User, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Описание</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Description_User, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description_User, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Возраст</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Age_User, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Age_User, "", new { @class = "text-danger" })
        </div>
    </div>



    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Никнейм</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Nickname_User, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Nickname_User, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Логин</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
        </div>
    </div>

   
    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Тип пользователя</label>
        <div class="col-md-10">
            @Html.DropDownList("ID_User_Type", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ID_User_Type, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label for="name-4c18" class="control-label col-md-2">Email</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Email_User, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email_User, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Добавить нового пользователя" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Вернуться назад", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
